@using Microsoft.AspNetCore.Identity
@using SaleAndRentingPortalSql.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            
            <li>
                <a asp-area="" asp-controller="Products" asp-action="Index">Produkter</a>
            </li>

            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hej @UserManager.GetUserName(User)!</a>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <text>
                    <li>
                        <a asp-area="" asp-controller="Account" asp-action="Users">Alle Brugere</a>
                    </li>
                </text>

            }
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log ud</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Opret bruger</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log ind</a></li>
    </ul>
}
